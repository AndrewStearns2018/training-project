<h1>Please contribute to this project</h1>

<div class="container">
  <%= simple_form_for [@project, @contribution] do |f| %>

    <%= f.input :amount, input_html: { class: "form-control" } %>

    <%= f.input :reward_id,:collection => @project.rewards,:label_method => lambda {
      |reward| "#{reward.name} - #{reward.price} â‚¬" },:value => :id,:label => "Reward" ,:include_blank => true %>

    <%= f.hidden_field :project_id, value: @project.id %>

    <%= f.hidden_field :user_id, value: current_user.id %>

    <%= f.submit "Submit", class: "btn btn-primary form-control" %>
  <% end %>
</div>
